<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="0dp" >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
           />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/background"
            android:padding="0dp" >

            <RelativeLayout
                android:id="@+id/about"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="fill"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/tabview4"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="262dp"
                        android:layout_height="85dp"
                        android:src="@drawable/about_widenoise"
                        android:text="tabview4" 
                        android:layout_marginTop="5dp"/>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" >
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/about_separator"
                        android:text="tabview4" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" >
                    </RelativeLayout>
                    
                    <LinearLayout
	                    android:id="@+id/tabview5"
                    	android:layout_width="262dp"
                        android:layout_height="190dp"
                        android:gravity="center"
                    	android:orientation="horizontal">
                    	
                    	<ImageView
	                        android:layout_width="131dp"
	                        android:layout_height="190dp"
	                        android:src="@drawable/about_widetag_1"
	                        android:text="about_widetag_1"
	                        android:clickable="true"  
 							android:onClick="aboutWidetagClick" />
 							
 							<LinearLayout
			                    android:id="@+id/tabview6"
		                    	android:layout_width="131dp"
		                        android:layout_height="190dp"
		                        android:gravity="center"
		                    	android:orientation="vertical">
                        
		                        <ImageView
			                        android:layout_width="131dp"
			                        android:layout_height="55dp"
			                        android:src="@drawable/about_widetag_2_1"
			                        android:text="about_widetag_2_1"
			                        android:clickable="true"  
		 							android:onClick="aboutEveryAwareClick" />
		 							
		 						<ImageView
			                        android:layout_width="131dp"
			                        android:layout_height="44dp"
			                        android:src="@drawable/about_widetag_2_2"
			                        android:text="about_widetag_2_2"
			                        android:clickable="true"  
		 							android:onClick="aboutISIClick" />
		 							
		 						<ImageView
			                        android:layout_width="131dp"
			                        android:layout_height="33dp"
			                        android:src="@drawable/about_widetag_2_3"
			                        android:text="about_widetag_2_3"
			                        android:clickable="true"  
		 							android:onClick="aboutSapUniClick" />
		 							
		 						<ImageView
			                        android:layout_width="131dp"
			                        android:layout_height="33dp"
			                        android:src="@drawable/about_widetag_2_4"
			                        android:text="about_widetag_2_4"
			                        android:clickable="true"  
		 							android:onClick="aboutCSPClick" />
		 							
		 						<ImageView
			                        android:layout_width="131dp"
			                        android:layout_height="24dp"
			                        android:src="@drawable/about_widetag_2_5"
			                        android:text="about_widetag_2_5"
			                        android:clickable="true"  
		 							android:onClick="aboutL3SClick" />
		 							
                    
                    		</LinearLayout> 	
                    </LinearLayout> 
                        
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" >
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/about_separator"
                        android:text="tabview4" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" >
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="262dp"
                        android:layout_height="65dp"
                        android:src="@drawable/about_mobile_development"
                        android:text="codemachine"
                        android:clickable="true"  
 						android:onClick="aboutCodemachineClick" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" >
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/about_separator"
                        android:text="tabview4" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" >
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="262dp"
                        android:layout_height="50dp"
                        android:src="@drawable/about_note"
                        android:text="tabview4" 
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

</TabHost>